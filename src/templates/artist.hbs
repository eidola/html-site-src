<h2>{{name}}</h2>
<img src="/assets/285x285/{{kebabCase name}}.png"/>
<div>{{{ markdown description }}}</div>
{{#if soundcloud }}
    <iframe width="100%"
	height="450"
	scrolling="no"
	frameborder="no" 
	    src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/{{soundcloud.type}}/{{ soundcloud.id }}&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
{{/if}}

{{#if releases}}
    <div class="releases">
	<h3>Releases</h3>
	{{#each releases}}
	    <div><img src="/assets/285x285/{{cat_id}}.png"/></div>
	{{/each}}
    </div>
{{/if}}
    
