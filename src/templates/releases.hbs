{{#each .}}
    <div class="box">
	<img src="/assets/285x285/{{cat_id}}.png"/>
	<div class="detail">
	    <div class="inner">
		<h2><a href="/#!/releases/{{kebabCase title}}">{{title}}</a></h2>
		<div>Artist(s):
		    <ul>
			{{#each artists}}<li><a href="/#!/artists/{{kebabCase .}}">{{.}}</a></li>{{/each}}
		    </ul>
		</div>
		{{#if available}}
		    {{#if paypal}}
			<div class="add_to_cart">
			    <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
				<input type="hidden" name="cmd" value="_s-xclick">
				<input type="hidden" name="hosted_button_id" value="{{ paypal.hosted_button_id }}">
				<input type="image" src="https://www.paypalobjects.com/en_GB/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal â€“ The safer, easier way to pay online.">
				<img src="/assets/svg/ic_add_shopping_cart_black_24px.svg" />
			    </form>
			</div>
		    {{else}}
			<div><strong>SOLD OUT</strong></div>	
		    {{/if}}
		{{else}}
		    <div><strong>SOLD OUT</strong></div>
		{{/if}}
	    </div>
	</div>
    </div>
{{/each}}
